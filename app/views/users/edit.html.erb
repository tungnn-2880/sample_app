<% provide :title, t("layouts.header.settings") %>
<div class="container">
  <h1 class="center"><%= t "layouts.header.settings" %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render "shared/error_messages", object: @user %>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div>
          <%= button_tag t("reset_text"), type:"reset", class: "btn btn-default col-sm-6" %>
          <%= f.submit t(".submit"), class: "btn btn-primary col-sm-6" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
