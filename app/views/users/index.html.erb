<% provide :title, t("layouts.header.users") %>
<div class="container">
  <h1 class="center"><%= t "layouts.header.users" %></h1>
  <div class="row">
    <%= will_paginate %>
    <ul class="list-unstyled col-md-6 col-md-offset-3">
      <% @users.each do |user| %>
        <li class="row">
          <div class="col-sm-2">
            <%= gravatar_for user %>
          </div>
          <div class="col-sm-10">
            <p><%= link_to user.name, user %></p>
            <% if should_show_delete? user %>
              <p><%= link_to t(".delete_user"), user, method: :delete, class: "text-danger" %></p>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
    <%= will_paginate %>
  </div>
</div>
