<% provide :title, t("layouts.header.login") %>
<div class="container">
  <h1 class="center"><%= t "layouts.header.login" %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render "shared/error_messages", object: session %>
      <%= form_for :session, url: login_path do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
        <div class="checkbox row">
          <div class="col-sm-6">
            <label>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </label>
          </div>
          <div class="col-sm-6 text-right">
            <p><%= t ".new_user?" %> <%= link_to t(".register_now!"), register_path %></p>
          </div>
        </div>
        <%= f.submit t(".submit"), class: "btn btn-primary center-block" %>
      <% end %>
    </div>
  </div>
</div>
