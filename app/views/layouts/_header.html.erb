<header>
  <nav class="navbar fixed-top navbar-expand navbar-inverse">
    <div class="container">
      <%= link_to t("app_name"), root_path, class: "navbar-header navbar-brand" %>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to t(".home"), home_path %></li>
        <li class="nav-item"><%= link_to t(".help"), help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t ".account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), "#" %></li>
              <li class="divider"></li>
              <li> <%= link_to t(".logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to t(".login"), login_path %></li>
          <li class="nav-item"><%= link_to t(".register"), register_path %></li>
        <% end %>
        <% I18n.available_locales.each do |lang| %>
          <li class="nav-item"><%= link_to lang.to_s.upcase, (request.path+"?locale=#{lang}") %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
